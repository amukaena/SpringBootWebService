<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>SpringBoot WebService</title>
		
		<!-- Add bootstrap css -->
		<!-- <link rel="stylesheet" href="/css/lib/bootstrap.min.css"> -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	</head>
	<body>
		<h1>WebService Starting With SpringBoot</h1>
		
		<div class="col-md-12">
	        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#savePostsModal">Regist</button>
	        <br/>
	        <br/>
	        <!-- 목록 출력 영역 -->
	        <table class="table table-horizontal table-bordered">
	            <thead class="thead-strong">
	                <tr>
	                    <th>IDX</th>
	                    <th>TITLE</th>
	                    <th>AUTHOR</th>
	                    <th>UPDATEDT</th>
	                </tr>
	            </thead>
	            <tbody id="tbody">
	            {{#each posts}}
	                <tr>
	                    <td>{{id}}</td>
	                    <td>{{title}}</td>
	                    <td>{{author}}</td>
	                    <td>{{modifiedDate}}</td>
	                </tr>
	            {{/each}}
	            </tbody>
	        </table>
	    </div>
		
		<div class="modal fade" id="savePostsModal" tabindex="-1" role="dialog" aria-labelledby="savePostsLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
	            <div class="modal-content">
	                <div class="modal-header">
	                    <h5 class="modal-title" id="savePostsLabel">Regist</h5>
	                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	                        <span aria-hidden="true">&times;</span>
	                    </button>
	                </div>
	                <div class="modal-body">
	                    <form>
	                        <div class="form-group">
	                            <label for="title">Title</label>
	                            <input type="text" class="form-control" id="title" placeholder="Enter the title">
	                        </div>
	                        <div class="form-group">
	                            <label for="author"> Author </label>
	                            <input type="text" class="form-control" id="author" placeholder="Enter the author">
	                        </div>
	                        <div class="form-group">
	                            <label for="content"> Content </label>
	                            <textarea class="form-control" id="content" placeholder="Enter the content"></textarea>
	                        </div>
	                    </form>
	                </div>
	                <div class="modal-footer">
	                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
	                    <button type="button" class="btn btn-primary" id="btn-save">Regist</button>
	                </div>
	            </div>
	        </div>
		</div>
		
		<!-- Add bootstrap js, jquery -->
		<!-- <script src="/js/lib/jquery.min.js"></script> -->
		<!-- <script src="/js/lib/bootstrap.min.js"></script> -->
		<script type="text/javascript" src="//code.jquery.com/jquery-1.11.3.min.js"></script>
		<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		
		<!-- Add custom js -->
		<script src="/js/app/main.js"></script>
	</body>
</html>